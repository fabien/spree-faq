<div class='toolbar'>
    <ul class='actions'>
      <li id="new_question_category_link">
        <%= button_link_to t("new_question_category"), 
                         new_admin_question_category_url, 
                         { :remote => :true, :icon => 'add', 'data-update' => 'new_question_category', :id => 'new_question_category_link' } %>
      </li> 
    </ul>
  <br class='clear' />
</div>
<div id="new_question_category"></div>

<h1><%= t("question_categories") %></h1>
<table class="index">
  <thead data-hook="admin_question_categories_index_headers">
    <th><%= t("category") %></td>
    <th><%= t("questions") %></td>
    <th><%= t("region") %></td>
    <th data-hook="admin_question_categories_header_actions"></th>
  </tr>
  <thead>
<% @question_categories.each do |category| %>
  <tr id="<%= dom_id category %>" data-hook="admin_question_categories_index_rows"> 
    <%- locals = {:category => category} %>
    <td><%= h category.name %></td>
    <td><%= category.questions.count %></td>
    <td><%= t(category.locale) %></td>
    <td class="actions" data-hook="admin_question_categories_index_row_actions">
      <%= link_to_edit category %>&nbsp;
      <%= link_to_delete category %>
    </td>
  </tr>
<% end %> 
  </tbody>
</table>
