<div class="question">
  <p>
    <%= f.label :question, t("question") %> <span class="required">*</span><br />
    <%= f.text_field :question  %>  
  </p>
  <p>
    <%= f.label :answer, t("answer") %> <span class="required">*</span><br />
    <%= f.text_area :answer, :cols => 60, :rows => 2, :class => 'fullwidth' %>  
  </p>
  <%= remove_nested f %>
</div>
